@{
    Layout = null;
}
@model List<CMS_DTO.Promotions.PromotionDTO>
<div class="table-responsive">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box red">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i>Khuyến mãi
                </div>
                <div class="actions">
                    <a href="javascript:;" class="btn btn-default btn-sm" onclick='ShowView("@Url.Action("Create","CMSPromotions")")'>
                        <i class="fa fa-plus"></i> Add new
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover dt-responsive" id="sample_3">
                    <thead>
                        <tr>
                            <th class="text-center">
                                Mã Khuyến Mãi
                            </th>
                            <th class="text-center"> Status </th>
                            <th class="text-center"> Action </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td class="text-center">
                                        @item.PromotionCode
                                    </td>
                                    <td class="text-center">
                                        <span class="label label-sm label-success"> @item.sStatus </span>
                                    </td>
                                    <td class="text-center">
                                        <a href="javascript:void(0)"
                                           onclick='ShowView("@Url.Action("Delete","CMSPromotions",new { Id=item.Id})")'
                                           class="btn btn-danger btn-xs delete details"><i class="fa fa-trash-o"></i>&nbsp;Delete</a>
                                    </td>

                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

<script type="text/javascript">

    var _tableProduct = null;
    var _settingsOptionTableProduct = {
        "language": {
            "aria": {
                "sortAscending": ": activate to sort column ascending",
                "sortDescending": ": activate to sort column descending"
            },
            "emptyTable": "No data available in table",
            "info": "Showing _START_ to _END_ of _TOTAL_ records",
            "infoEmpty": "No records found",
            "infoFiltered": "(filtered1 from _MAX_ total records)",
            "lengthMenu": "Show _MENU_",
            "search": "Search:",
            "zeroRecords": "No matching records found",
            "paginate": {
                "previous": "Prev",
                "next": "Next",
                "last": "Last",
                "first": "First"
            }
        },
        "oLanguage": {
            "sSearch": "Search:",
            "sLengthMenu": "View _MENU_",
            "sProcessing": "Processing...",
            "sZeroRecords": "No matching line found",
            "sInfo": "Watching _START_ to _END_ in total _TOTAL_ item",
            "sInfoEmpty": "Watching 0 to 0 in total 0 item",
            "sInfoFiltered": "(filtered from _MAX_ item)",
            "sInfoPostFix": "",
        },
        "bStateSave": true, // save datatable state(pagination, sort, etc) in cookie.
        "lengthMenu": [
            [6, 15, 20, -1],
            [6, 15, 20, "All"] // change per page values here
        ],
        "pageLength": 20,
        "columnDefs": [
            { "orderable": false, "targets": [2] },
        ],
    };

    $(document).ready(function () {
        _tableProduct = $('#sample_3').DataTable($.extend(true, {}, _settingsOptionTableProduct));

    })

    function ShowView(url)
    {
        ShowViewOrEdit(url);
    }
</script>
