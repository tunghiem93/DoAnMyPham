@model CMS_DTO.CMSCustomer.CMS_CustomerModels
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Đăng ký thành viên";
}

<!-- Breadcrumb Start -->
<div class="breadcrumb-area ptb-60 ptb-sm-30">
    <div class="container">
        <div class="breadcrumb">
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li class="active"><a href="#">Đăng ký tài khoản</a></li>
            </ul>
        </div>
    </div>
    <!-- Container End -->
</div>
<!-- Breadcrumb End -->
<!-- Register Account Start -->
<div class="register-account pb-60">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="register-title">
                    <h3 class="mb-10">Đăng ký tài khoản</h3>
                    <p class="mb-10">Thông tin tài khoản</p>
                </div>
            </div>
        </div>
        <!-- Row End -->
        <div class="row">
            <div class="col-sm-12">
                @using (@Html.BeginForm("SignUp", "Login", FormMethod.Post, new { @id = "create_customer", @class = "form-horizontal create-form", @enctype = "multipart/form-data", }))
                {
                    <fieldset>
                        <legend>Thông tin cá nhân</legend>
                        <div class="form-group">
                            <label class="control-label" for="f-name"><span class="require">*</span>Last name First name</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @id = "CustomerFirstName", @placeholder = "*First name", @autocapitalize = "words", @required = "required" })
                                @Html.ValidationMessageFor(model => model.FirstName, null, new { @class = "label label-danger", })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="l-name"><span class="require">*</span>Last name</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @id = "CustomerFirstName", @placeholder = "*Last name", @autocapitalize = "words", @required = "required" })
                                @Html.ValidationMessageFor(model => model.LastName, null, new { @class = "label label-danger", })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="email"><span class="require">*</span>Address email...</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @id = "CustomerEmail", @placeholder = "*Address Email", @type = "email", @required = "required" })
                                @Html.ValidationMessageFor(model => model.Email, null, new { @class = "label label-danger", })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="number"><span class="require">*</span>Số Phone</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @id = "CustomerEmail", @placeholder = "Số Phone", })
                                @Html.ValidationMessageFor(model => model.Phone, null, new { @class = "label label-danger", })
                            </div>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend>Password của bạn</legend>
                        <div class="form-group">
                            <label class="control-label" for="pwd"><span class="require">*</span>Password:</label>
                            <div class="col-sm-10">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @id = "CreatePassword", @placeholder = "*Password", @type = "password", @required = "required" })
                                @Html.ValidationMessageFor(model => model.Password, null, new { @class = "label label-danger", })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="pwd-confirm"><span class="require">*</span>Xác nhận Password</label>
                            <div class="col-sm-10">
                                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @id = "CreatePassword", @placeholder = "*Xác nhân Password", @type = "password", @required = "required" })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { @class = "label label-danger", })
                            </div>
                        </div>
                    </fieldset>
                    @*<fieldset class="newsletter-input">
                        <legend>Newsletter</legend>
                        <div class="form-group">
                            <label class="control-label">Subscribe</label>
                            <div class="col-sm-10">
                                <label class="radio-inline">
                                    <input type="radio" name="newsletter" value="1"> Yes
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="newsletter" value="0" checked="checked"> No
                                </label>
                            </div>
                        </div>
                    </fieldset>*@
                    <div class="buttons newsletter-input">
                        <div class="pull-right">
                            Tôi đã đọc điều khoản <a href="#" class="agree"><b>và chính sách</b></a>
                            <input type="checkbox" name="agree" value="1" onclick="agreeFunction(this)" /> &nbsp;
                            <input type="submit" id="idsubmit" value="Đăng ký" class="newsletter-btn" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $("#idsubmit").prop("disabled", true);
    });

    function agreeFunction(e) {
        if (e.checked == true) {
            $("#idsubmit").prop("disabled", false);
        }
        else {
            $("#idsubmit").prop("disabled", true);
        }
    }
</script>
